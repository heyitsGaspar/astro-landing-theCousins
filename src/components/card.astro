---

interface Props{
    imageUrl: string;
    title: string;
    description: string;
    altText: string;
}

const { imageUrl, title, description, altText }: Props = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden flex-shirnk-0 w-64 md:h-80">
    <img src={imageUrl} alt={altText} class="w-full h-40 object-cover" loading="lazy">
    <div class="p-4">
        <h3 class="text-xl font-semibold mb-2 text-gray-900">{title}</h3>
        <p class="text-gray-600 text-sm">{description}</p>
    </div>
</div>
